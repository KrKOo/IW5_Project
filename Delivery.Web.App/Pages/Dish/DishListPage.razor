@page "/dishes"
@namespace Delivery.Web.App.Pages
@using Delivery.Web.App
@inherits PageBase
@layout ListLayout

<h1 class="mb-4">Page_Title</h1>

<div class="row">
    <div class="col-md">
        <div class="bg-sec h-100 rounded">
            @if (Dishes.Count != 0)
            {
                <table class="table border table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="row">Image_TableHeader</th>
                            <th scope="row">Name_TableHeader</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dish in Dishes)
                        {
                            <tr>
                                <td style="vertical-align: middle;">
                                    <img src="@dish.ImageUrl" height="50"/>
                                </td>
                                <td style="vertical-align: middle;">
                                    <NavLink href="@($"/dishes/{dish.Id}")">@dish.Name</NavLink>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="col-md">
        <IngredientEditForm OnModification="@LoadData" />
    </div>
</div>